@model ViewPropertyDetails

<div class="col-md-4 mb-4">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text">@Model.Blurb</p>
            <p class="card-text">Location: @Model.Location</p>
            <p class="card-text">Bedrooms: @Model.NumberOfBedrooms</p>
            <p class="card-text">Cost Per Night: $@Model.CostPerNight</p>
            <a href="@Url.Action("ViewPropertyDetails", "PropertyListing", new { id = Model.Id })" class="btn btn-primary">View Details</a>
        </div>
    </div>
</div>